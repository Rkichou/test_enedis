{% extends 'base.html.twig' %}

{% block title %}Détails du Produit{% endblock %}

{% block body %}
<div class="produit-container">
    <h1 class="produit-title">Détails du Produit</h1>

    <table class="produit-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }} €</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ produit.categorie }}</td>
            </tr>
        </tbody>
    </table>

    <div class="produit-actions">
        <a href="{{ path('app_produit_index') }}" class="btn btn-back">Retour à la liste</a>
        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-edit">Modifier</a>
        {{ include('produit/_delete_form.html.twig', { 'class': 'btn btn-delete' }) }}
    </div>
</div>
{% endblock %}
